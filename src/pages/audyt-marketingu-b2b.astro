---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";

const plFaqStructuredData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "Czym jest audyt marketingu B2B?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "To szybka diagnoza, która pokazuje gdzie w analityce, atrybucji i CRM tracisz jakość danych oraz pipeline.",
      },
    },
    {
      "@type": "Question",
      name: "Ile trwa audyt?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Zakres i tempo zależą od stacku, ale celem jest szybkie wskazanie priorytetów zamiast długiego projektu doradczego.",
      },
    },
  ],
};
---

<BaseLayout
  title="Audyt marketingu B2B — GA4, GTM, atrybucja i CRM"
  description="Praktyczny audyt marketingu B2B: naprawa GA4, GTM, atrybucji i jakości danych CRM, żeby podejmować lepsze decyzje growth."
  funnelStage="decision"
  structuredData={plFaqStructuredData}
>
  <section class="bg-base-50 border-b border-base-200">
    <Wrapper variant="standard" class="py-20 lg:py-28">
      <div class="max-w-3xl space-y-6">
        <Text tag="h1" variant="displayMD" class="font-display text-accent-800">
          Audyt marketingu B2B
        </Text>
        <Text variant="textLG" class="text-base-800">
          Jeśli dane z reklam, GA4 i CRM są niespójne, skalowanie budżetu staje się
          ryzykowne.
        </Text>
        <Text variant="textBase" class="text-base-700">
          Ten audyt pokazuje co jest zepsute, co ma najwyższy wpływ biznesowy i co
          naprawić najpierw.
        </Text>
        <div class="flex flex-wrap gap-3">
          <Button
            isLink
            href="https://cal.com/rudi-jantos"
            data-track="book-call"
            variant="default"
            size="md"
          >
            Umów krótką rozmowę
          </Button>
          <Button isLink href="/offer/" data-track="offer" variant="muted" size="md">
            Zobacz ofertę
          </Button>
        </div>
      </div>
    </Wrapper>
  </section>

  <Wrapper variant="standard" class="py-20 lg:py-24">
    <div class="max-w-3xl space-y-8">
      <section class="space-y-4">
        <Text tag="h2" variant="displayXS" class="font-display">
          Co obejmuje audyt
        </Text>
        <ul class="space-y-2 text-base-700 list-disc pl-5">
          <li>Kontrola konfiguracji GA4 i GTM</li>
          <li>Weryfikacja UTM i jakości atrybucji</li>
          <li>Sprawdzenie spójności danych między GA4 i CRM</li>
          <li>Priorytety wdrożenia według wpływu na decyzje i pipeline</li>
        </ul>
      </section>

      <section class="border border-base-200 bg-base-50 p-8 rounded-sm space-y-4">
        <Text tag="h2" variant="displayXS" class="font-display">
          Dla kogo
        </Text>
        <ul class="space-y-2 text-base-700 list-disc pl-5">
          <li>Founderzy i liderzy growth w B2B</li>
          <li>Zespoły, które mają dużo raportów, ale mało pewności</li>
          <li>Firmy przed skalowaniem budżetu marketingowego</li>
        </ul>
      </section>
    </div>
  </Wrapper>
</BaseLayout>
