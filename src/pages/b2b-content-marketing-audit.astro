---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import TopicClusterNav from "@/components/global/TopicClusterNav.astro";
---

<BaseLayout
  title="B2B Content Marketing Audit â€” Increase SEO Clicks and Lead Conversion"
  description="Audit B2B content for SEO intent fit, CTR improvement, and call-booking conversion. Practical framework for faster inbound gains."
  funnelStage="decision"
>
  <section class="bg-base-50 border-b border-base-200">
    <Wrapper variant="standard" class="py-20 lg:py-28">
      <div class="max-w-3xl space-y-6">
        <Text tag="h1" variant="displayMD" class="font-display text-accent-800">
          B2B Content Marketing Audit
        </Text>
        <Text variant="textLG" class="text-base-800">
          Ranking alone is not enough. This audit focuses on converting impressions
          into clicks and clicks into qualified conversations.
        </Text>
        <div class="flex flex-wrap gap-3">
          <Button isLink href="/offer/" data-track="offer" variant="default" size="md">
            See the audit offer
          </Button>
          <Button
            isLink
            href="/resources/b2b-content-marketing-audit-checklist/"
            data-track="resources"
            variant="muted"
            size="md"
          >
            Open checklist
          </Button>
        </div>
      </div>
    </Wrapper>
  </section>

  <Wrapper variant="standard" class="py-20 lg:py-24">
    <div class="max-w-3xl space-y-8">
      <section class="space-y-4">
        <Text tag="h2" variant="displayXS" class="font-display">
          Audit priorities
        </Text>
        <ul class="space-y-2 text-base-700 list-disc pl-5">
          <li>Search intent alignment for every key page</li>
          <li>Title/meta CTR optimization on impression-heavy URLs</li>
          <li>Internal linking depth into offer and decision pages</li>
          <li>CTA placement and friction reduction across content pages</li>
        </ul>
      </section>

      <section class="border border-base-200 bg-base-50 p-8 rounded-sm space-y-4">
        <Text tag="h2" variant="displayXS" class="font-display">
          Need implementation support?
        </Text>
        <Text variant="textBase" class="text-base-700">
          If you want this shipped quickly across your site, book a short fit call.
        </Text>
        <Button
          isLink
          href="https://cal.com/rudi-jantos"
          data-track="book-call"
          variant="default"
          size="md"
        >
          Book a quick call
        </Button>
      </section>
    </div>
  </Wrapper>

  <TopicClusterNav current="/b2b-content-marketing-audit/" />
</BaseLayout>
