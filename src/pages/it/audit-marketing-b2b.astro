---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";

const itFaqStructuredData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  inLanguage: "it",
  mainEntity: [
    {
      "@type": "Question",
      name: "Cos’è un audit marketing B2B?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "E' una diagnosi pratica che individua dove GA4, GTM, attribuzione e CRM stanno creando decisioni sbagliate.",
      },
    },
    {
      "@type": "Question",
      name: "Quanto tempo richiede?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Dipende dal setup, ma l'obiettivo è fornire priorità chiare in tempi rapidi, non un progetto lungo.",
      },
    },
  ],
};
---

<BaseLayout
  lang="it"
  title="Audit marketing B2B — GA4, GTM, attribuzione e CRM"
  description="Audit marketing B2B in italiano per sistemare GA4, GTM, attribuzione e qualità dei dati CRM."
  funnelStage="decision"
  structuredData={itFaqStructuredData}
>
  <section class="bg-base-50 border-b border-base-200">
    <Wrapper variant="standard" class="py-20 lg:py-28">
      <div class="max-w-3xl space-y-6">
        <Text tag="h1" variant="displayMD" class="font-display text-accent-800">
          Audit marketing B2B
        </Text>
        <Text variant="textLG" class="text-base-800">
          Se i dati tra advertising, GA4 e CRM non sono allineati, stai prendendo
          decisioni con segnali incompleti.
        </Text>
        <Text variant="textBase" class="text-base-700">
          Questo audit identifica cosa non funziona e cosa va sistemato prima per
          migliorare la qualità delle decisioni growth.
        </Text>
        <div class="flex flex-wrap gap-3">
          <Button
            isLink
            href="https://cal.com/rudi-jantos"
            data-track="book-call"
            variant="default"
            size="md"
          >
            Prenota una call
          </Button>
          <Button isLink href="/offer/" data-track="offer" variant="muted" size="md">
            Vedi l’offerta in inglese
          </Button>
        </div>
      </div>
    </Wrapper>
  </section>

  <Wrapper variant="standard" class="py-20 lg:py-24">
    <div class="max-w-3xl space-y-8">
      <section class="space-y-4">
        <Text tag="h2" variant="displayXS" class="font-display">
          Cosa include
        </Text>
        <ul class="space-y-2 text-base-700 list-disc pl-5">
          <li>Audit tecnico GA4 e GTM</li>
          <li>Controllo UTM e qualità dell’attribuzione</li>
          <li>Allineamento tra dati marketing e CRM</li>
          <li>Piano priorità per interventi ad alto impatto</li>
        </ul>
      </section>
      <section class="space-y-4">
        <Text tag="h2" variant="displayXS" class="font-display">
          Prossimo step
        </Text>
        <Text variant="textBase" class="text-base-700">
          Se vuoi, puoi iniziare da una call breve oppure inviarmi il contesto via
          email.
        </Text>
        <div class="flex flex-wrap gap-3">
          <Button
            isLink
            href="https://cal.com/rudi-jantos"
            data-track="book-call"
            variant="default"
            size="md"
          >
            Prenota
          </Button>
          <Button
            isLink
            href="mailto:hi@rjantos.com"
            data-track="email"
            variant="muted"
            size="md"
          >
            Scrivimi via email
          </Button>
        </div>
      </section>
    </div>
  </Wrapper>
</BaseLayout>
