---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const offices = [
  {
    name: "Main Office - New York",
    address: "123 Legal Avenue, Suite 400",
    city: "New York, NY 10001",
    phone: "(555) 123-4567",
    email: "ny@carringtonlaw.com",
    description: "Our flagship office in the heart of Manhattan serves clients throughout the Northeast with comprehensive legal services. Located in a modern high-rise with state-of-the-art conference facilities.",
    features: ["24/7 Security", "Conference Rooms", "Client Lounge", "Parking Garage"],
    mapEmbed: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.221990489111!2d-74.00369368459375!3d40.713129579331854!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a316ba4bf83%3A0xbae5cb597764b!2s123%20Legal%20Avenue%2C%20New%20York%2C%20NY%2010001!5e0!3m2!1sen!2sus!4v1696871234567!5m2!1sen!2sus"
  },
  {
    name: "Branch Office - Los Angeles",
    address: "456 Justice Boulevard, Floor 12",
    city: "Los Angeles, CA 90210",
    phone: "(555) 987-6543",
    email: "la@carringtonlaw.com",
    description: "Serving clients across the West Coast from our Beverly Hills location. Our California office specializes in entertainment law, real estate, and business litigation.",
    features: ["Ocean Views", "Video Conferencing", "Library", "Valet Parking"],
    mapEmbed: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3305.7326472360283!2d-118.40060368459375!3d34.069650679331854!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c2c75ddc3a5c71%3A0xbae5cb597764b!2s456%20Justice%20Boulevard%2C%20Los%20Angeles%2C%20CA%2090210!5e0!3m2!1sen!2sus!4v1696871234567!5m2!1sen!2sus"
  }
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard">
      <div class="text-center mb-16">
        <Text
          tag="h1"
          variant="textLG"
          class="order-last font-serif uppercase lg:order-none col-span-full lg:col-span-2 text-base-900 mb-6"
        >
          Our Offices
        </Text>
        <Text tag="p" variant="textBase" class="text-base-700 max-w-3xl mx-auto leading-relaxed">
          With offices strategically located in major metropolitan areas, Carrington Law provides accessible,
          high-quality legal services to clients nationwide. Each office is equipped with modern facilities
          and staffed by experienced attorneys ready to serve your legal needs.
        </Text>
      </div>

      <div class="space-y-16">
        {offices.map((office, index) => (
          <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 ${index % 2 === 1 ? 'lg:grid-flow-col-dense' : ''}`}>
            <!-- Office Information -->
            <div class={index % 2 === 1 ? 'lg:col-start-2' : ''}>
              <Text tag="h2" variant="textBase" class="font-semibold text-base-900 mb-4">
                {office.name}
              </Text>

              <Text tag="p" variant="textSm" class="text-base-700 mb-6 leading-relaxed">
                {office.description}
              </Text>

              <!-- Contact Information -->
              <div class="mb-6">
                <Text tag="h3" variant="textSm" class="font-semibold text-base-900 mb-3">
                  Contact Information
                </Text>
                <div class="space-y-2 text-sm">
                  <p class="text-base-700">{office.address}</p>
                  <p class="text-base-700">{office.city}</p>
                  <p>
                    <a href={`tel:${office.phone}`} class="text-accent-600 hover:text-accent-700 transition-colors">
                      {office.phone}
                    </a>
                  </p>
                  <p>
                    <a href={`mailto:${office.email}`} class="text-accent-600 hover:text-accent-700 transition-colors">
                      {office.email}
                    </a>
                  </p>
                </div>
              </div>

              <!-- Office Features -->
              <div class="mb-6">
                <Text tag="h3" variant="textSm" class="font-semibold text-base-900 mb-3">
                  Office Features
                </Text>
                <div class="flex flex-wrap gap-2">
                  {office.features.map((feature) => (
                    <span class="inline-block bg-accent-50 text-accent-700 px-3 py-1 rounded-full text-xs font-medium">
                      {feature}
                    </span>
                  ))}
                </div>
              </div>

              <!-- Directions Button -->
              <Button
                isLink={true}
                href={`https://www.google.com/maps/dir/?api=1&destination=${encodeURIComponent(office.address + ', ' + office.city)}`}
                variant="accent"
                size="sm"
              >
                Get Directions
              </Button>
            </div>

            <!-- Office Map -->
            <div class={index % 2 === 1 ? 'lg:col-start-1' : ''}>
              <div class="aspect-video bg-base-100 border border-base-200 rounded-lg overflow-hidden shadow-sm">
                <iframe
                  src={office.mapEmbed}
                  width="100%"
                  height="100%"
                  style="border:0;"
                  allowfullscreen=""
                  loading="lazy"
                  referrerpolicy="no-referrer-when-downgrade"
                  title={`Map of ${office.name}`}
                ></iframe>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Call to Action -->
      <div class="mt-16 text-center bg-base-50 rounded-lg p-8">
        <Text tag="h2" variant="textBase" class="font-semibold text-base-900 mb-4">
          Visit Us Today
        </Text>
        <Text tag="p" variant="textSm" class="text-base-700 mb-6 max-w-2xl mx-auto">
          Schedule a consultation at any of our convenient locations. Our experienced attorneys
          are ready to discuss your legal needs and provide the guidance you deserve.
        </Text>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button isLink={true} href="/contact" variant="accent" size="base">
            Schedule Consultation
          </Button>
          <Button isLink={true} href="/free-consultation" variant="muted" size="base">
            Free Consultation
          </Button>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
