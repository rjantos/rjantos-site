---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const newsletterBenefits = [
  {
    title: "Legal Updates",
    description:
      "Stay informed about changes in laws and regulations that may affect your business or personal matters.",
    icon: "L",
  },
  {
    title: "Practice Insights",
    description:
      "Get expert analysis and insights into various practice areas including corporate law, litigation, and more.",
    icon: "P",
  },
  {
    title: "Client Success Stories",
    description:
      "Read about real cases and how our legal strategies helped clients achieve their goals.",
    icon: "S",
  },
  {
    title: "Industry Trends",
    description:
      "Learn about emerging trends in the legal industry and how they impact businesses and individuals.",
    icon: "T",
  },
];

const newsletterTopics = [
  "Recent Supreme Court Decisions",
  "Corporate Law Developments",
  "Employment Law Updates",
  "Real Estate Market Insights",
  "Tax Law Changes",
  "Intellectual Property News",
  "Family Law Trends",
  "Business Litigation Updates",
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <Text
          tag="h1"
          variant="textLG"
          class="order-last font-serif uppercase lg:order-none col-span-full lg:col-span-2 text-base-900 mb-6"
        >
          Stay Informed with Our Newsletter
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="text-base-700 max-w-3xl mx-auto leading-relaxed mb-8"
        >
          Subscribe to Carrington Law's newsletter and receive expert legal
          insights, industry updates, and valuable information delivered
          directly to your inbox. Join thousands of professionals who stay ahead
          of legal developments.
        </Text>
      </div>

      <!-- Newsletter Signup Form -->
      <div class="max-w-2xl mx-auto mb-16">
        <div class="bg-base-50 border border-base-200 rounded-lg p-8">
          <Text
            tag="h2"
            variant="textBase"
            class="font-semibold text-base-900 text-center mb-6"
          >
            Subscribe to Our Newsletter
          </Text>

          <form class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label
                  for="firstName"
                  class="block text-sm font-medium text-base-700 mb-2"
                >
                  First Name *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
                  placeholder="John"
                />
              </div>
              <div>
                <label
                  for="lastName"
                  class="block text-sm font-medium text-base-700 mb-2"
                >
                  Last Name *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
                  placeholder="Doe"
                />
              </div>
            </div>

            <div>
              <label
                for="email"
                class="block text-sm font-medium text-base-700 mb-2"
              >
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
                placeholder="john.doe@example.com"
              />
            </div>

            <div>
              <label
                for="practiceArea"
                class="block text-sm font-medium text-base-700 mb-2"
              >
                Areas of Interest (Optional)
              </label>
              <select
                id="practiceArea"
                name="practiceArea"
                class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
              >
                <option value="">Select areas of interest</option>
                <option value="corporate">Corporate Law</option>
                <option value="criminal">Criminal Defense</option>
                <option value="family">Family Law</option>
                <option value="personal-injury">Personal Injury</option>
                <option value="real-estate">Real Estate</option>
                <option value="employment">Employment Law</option>
                <option value="intellectual-property"
                  >Intellectual Property</option
                >
                <option value="all">All Practice Areas</option>
              </select>
            </div>

            <div class="flex items-start space-x-3">
              <input
                type="checkbox"
                id="privacy"
                name="privacy"
                required
                class="mt-1 h-4 w-4 text-accent-600 focus:ring-accent-500 border-base-300 rounded"
              />
              <label for="privacy" class="text-sm text-base-700">
                I agree to receive newsletters from Carrington Law. I understand
                I can unsubscribe at any time. View our <a
                  href="/privacy"
                  class="text-accent-600 hover:text-accent-700 underline"
                  >Privacy Policy</a
                >.
              </label>
            </div>

            <Button variant="accent" size="base" type="submit" class="w-full">
              Subscribe to Newsletter
            </Button>
          </form>
        </div>
      </div>

      <!-- Benefits Section -->
      <div class="mb-16">
        <Text
          tag="h2"
          variant="textBase"
          class="font-semibold text-base-900 text-center mb-12"
        >
          What You'll Receive
        </Text>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            newsletterBenefits.map((benefit) => (
              <div class="text-center p-6 border border-base-200 rounded-lg hover:shadow-md transition-shadow">
                <div class="text-3xl mb-4">{benefit.icon}</div>
                <Text
                  tag="h3"
                  variant="textSm"
                  class="font-semibold text-base-900 mb-3"
                >
                  {benefit.title}
                </Text>
                <Text
                  tag="p"
                  variant="textXs"
                  class="text-base-700 leading-relaxed"
                >
                  {benefit.description}
                </Text>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Newsletter Topics -->
      <div class="mb-16">
        <Text
          tag="h2"
          variant="textBase"
          class="font-semibold text-base-900 text-center mb-8"
        >
          Featured Topics
        </Text>

        <div class="max-w-4xl mx-auto">
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            {
              newsletterTopics.map((topic) => (
                <div class="bg-accent-50 text-accent-800 px-4 py-3 rounded-lg text-center text-sm font-medium">
                  {topic}
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Newsletter Stats/Testimonials -->
      <div class="bg-base-900 text-white rounded-lg p-8 text-center">
        <Text tag="h2" variant="textBase" class="font-semibold mb-4">
          Join Our Community
        </Text>
        <Text tag="p" variant="textSm" class="mb-6 opacity-90">
          Over 5,000 professionals trust Carrington Law for their legal insights
          and updates. Join our growing community of informed clients and
          industry leaders.
        </Text>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 text-sm">
          <div>
            <div class="text-2xl font-bold text-accent-400 mb-1">5,000+</div>
            <div class="opacity-80">Active Subscribers</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-accent-400 mb-1">Monthly</div>
            <div class="opacity-80">Newsletter Delivery</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-accent-400 mb-1">10+</div>
            <div class="opacity-80">Years of Insights</div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
