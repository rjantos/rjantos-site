---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const awards = [
  {
    title: "Best Law Firm of the Year",
    organization: "Legal Excellence Awards",
    year: "2024",
    category: "Corporate Law",
    description:
      "Recognized for outstanding corporate legal services and client satisfaction.",
  },
  {
    title: "Top 100 Law Firms",
    organization: "National Law Journal",
    year: "2023-2024",
    category: "National Ranking",
    description:
      "Ranked among the top 100 law firms in the United States for comprehensive legal services.",
  },
  {
    title: "Excellence in Litigation",
    organization: "American Bar Association",
    year: "2024",
    category: "Litigation",
    description:
      "Awarded for exceptional litigation strategies and courtroom success.",
  },
  {
    title: "Client Choice Award",
    organization: "Client Satisfaction Institute",
    year: "2023",
    category: "Client Service",
    description:
      "Recognized for superior client service and communication throughout legal matters.",
  },
];

const recognitions = [
  {
    title: "AV Preeminent Rating",
    organization: "Martindale-Hubbell",
    description: "Highest rating for legal ability and ethical standards",
    attorneys: "All Partners",
  },
  {
    title: "Super Lawyers",
    organization: "Super Lawyers Magazine",
    description: "Selected as Super Lawyers in multiple practice areas",
    attorneys: "12 Attorneys",
  },
  {
    title: "Best Lawyers in America",
    organization: "Best Lawyers",
    description: "Listed in Best Lawyers in America directory",
    attorneys: "8 Attorneys",
  },
  {
    title: "Top Rated Lawyers",
    organization: "American Lawyer Media",
    description:
      "Recognized for professional excellence and client satisfaction",
    attorneys: "15 Attorneys",
  },
];

const memberships = [
  "American Bar Association",
  "New York State Bar Association",
  "California State Bar Association",
  "American Corporate Counsel Association",
  "Defense Research Institute",
  "International Bar Association",
];

const rankings = [
  {
    publication: "Chambers & Partners",
    ranking: "Band 1",
    category: "Corporate/M&A",
    location: "New York",
  },
  {
    publication: "Legal 500",
    ranking: "Tier 1",
    category: "Corporate Law",
    location: "United States",
  },
  {
    publication: "U.S. News & World Report",
    ranking: "Top Tier",
    category: "Business Law",
    location: "National",
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <Text
          tag="h1"
          variant="textLG"
          class="order-last font-serif uppercase lg:order-none col-span-full lg:col-span-2 text-base-900 mb-6"
        >
          Awards and Recognitions
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="text-base-700 max-w-3xl mx-auto leading-relaxed"
        >
          Carrington Law has earned numerous prestigious awards and recognitions
          for our commitment to excellence in legal services, client
          satisfaction, and professional standards. These accolades reflect our
          dedication to providing outstanding legal representation.
        </Text>
      </div>

      <!-- Awards Section -->
      <div class="mb-16">
        <Text
          tag="h2"
          variant="textBase"
          class="font-semibold text-base-900 text-center mb-12"
        >
          Major Awards
        </Text>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            awards.map((award) => (
              <div class="bg-base-50 border border-base-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <Text
                      tag="h3"
                      variant="textSm"
                      class="font-semibold text-base-900 mb-1"
                    >
                      {award.title}
                    </Text>
                    <Text
                      tag="p"
                      variant="textXs"
                      class="text-accent-600 font-medium"
                    >
                      {award.organization} â€¢ {award.year}
                    </Text>
                  </div>
                  <div class="bg-accent-100 text-accent-800 px-3 py-1 rounded-full text-xs font-medium">
                    {award.category}
                  </div>
                </div>
                <Text tag="p" variant="textXs" class="text-base-700">
                  {award.description}
                </Text>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Rankings Section -->
      <div class="mb-16">
        <Text
          tag="h2"
          variant="textBase"
          class="font-semibold text-base-900 text-center mb-12"
        >
          Professional Rankings
        </Text>

        <div class="overflow-x-auto">
          <table class="w-full border border-base-200 rounded-lg">
            <thead class="bg-base-50">
              <tr>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-base-900 uppercase tracking-wider"
                >
                  Publication
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-base-900 uppercase tracking-wider"
                >
                  Ranking
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-base-900 uppercase tracking-wider"
                >
                  Category
                </th>
                <th
                  class="px-6 py-3 text-left text-xs font-medium text-base-900 uppercase tracking-wider"
                >
                  Location
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-base-200">
              {
                rankings.map((ranking, index) => (
                  <tr class={index % 2 === 0 ? "bg-white" : "bg-base-50"}>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-base-900">
                      {ranking.publication}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-base-700">
                      <span class="bg-accent-100 text-accent-800 px-2 py-1 rounded text-xs font-medium">
                        {ranking.ranking}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-base-700">
                      {ranking.category}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-base-700">
                      {ranking.location}
                    </td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </div>

      <!-- Recognitions Section -->
      <div class="mb-16">
        <Text
          tag="h2"
          variant="textBase"
          class="font-semibold text-base-900 text-center mb-12"
        >
          Attorney Recognitions
        </Text>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {
            recognitions.map((recognition) => (
              <div class="border border-base-200 rounded-lg p-6 text-center hover:shadow-md transition-shadow">
                <Text
                  tag="h3"
                  variant="textSm"
                  class="font-semibold text-base-900 mb-2"
                >
                  {recognition.title}
                </Text>
                <Text
                  tag="p"
                  variant="textXs"
                  class="text-accent-600 font-medium mb-3"
                >
                  {recognition.organization}
                </Text>
                <Text tag="p" variant="textXs" class="text-base-700 mb-3">
                  {recognition.description}
                </Text>
                <div class="bg-base-100 px-3 py-2 rounded text-xs text-base-800 font-medium">
                  {recognition.attorneys}
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Memberships Section -->
      <div class="mb-16">
        <Text
          tag="h2"
          variant="textBase"
          class="font-semibold text-base-900 text-center mb-8"
        >
          Professional Memberships
        </Text>

        <div class="flex flex-wrap justify-center gap-4">
          {
            memberships.map((membership) => (
              <div class="bg-accent-50 text-accent-800 px-4 py-2 rounded-lg text-sm font-medium border border-accent-200">
                {membership}
              </div>
            ))
          }
        </div>
      </div>

      <!-- Call to Action -->
      <div class="text-center bg-base-900 text-white rounded-lg p-8">
        <Text tag="h2" variant="textBase" class="font-semibold mb-4">
          Experience Excellence
        </Text>
        <Text
          tag="p"
          variant="textSm"
          class="mb-6 opacity-90 max-w-2xl mx-auto"
        >
          Our awards and recognitions reflect our commitment to providing
          exceptional legal services. Contact us today to experience the
          Carrington Law difference.
        </Text>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button isLink={true} href="/contact" variant="accent" size="base">
            Contact Us
          </Button>
          <Button
            isLink={true}
            href="/free-consultation"
            variant="muted"
            size="base"
          >
            Free Consultation
          </Button>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
