---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const consultationBenefits = [
  {
    title: "No Cost Assessment",
    description:
      "Get expert legal advice without any upfront fees or obligations. We believe everyone deserves access to quality legal guidance.",
    icon: "F",
  },
  {
    title: "Expert Evaluation",
    description:
      "Receive a thorough analysis of your legal situation from experienced attorneys who understand the nuances of your case.",
    icon: "E",
  },
  {
    title: "Clear Action Plan",
    description:
      "Walk away with a clear understanding of your options, potential outcomes, and recommended next steps for your legal matter.",
    icon: "P",
  },
  {
    title: "Personalized Strategy",
    description:
      "Discuss your unique situation and receive tailored advice that addresses your specific goals and concerns.",
    icon: "S",
  },
];

const whatToExpect = [
  {
    step: "Initial Discussion",
    description:
      "We'll start by understanding your legal needs and the background of your situation.",
  },
  {
    step: "Case Assessment",
    description:
      "Our attorneys will evaluate the facts, applicable laws, and potential strategies for your case.",
  },
  {
    step: "Options Review",
    description:
      "We'll discuss various approaches, potential outcomes, and associated costs or considerations.",
  },
  {
    step: "Next Steps",
    description:
      "Receive clear guidance on how to proceed, whether with our firm or alternative options.",
  },
];

const consultationFaqs = [
  {
    question: "How long does a free consultation last?",
    answer:
      "Our initial consultations typically last 30-45 minutes, providing sufficient time to understand your situation and provide meaningful guidance.",
  },
  {
    question: "Do I need to bring any documents?",
    answer:
      "While not always required, bringing relevant documents, contracts, or correspondence related to your legal matter can help us provide more specific advice.",
  },
  {
    question: "What types of cases do you handle?",
    answer:
      "We handle a wide range of legal matters including corporate law, litigation, employment law, real estate, intellectual property, and more. Contact us to discuss your specific needs.",
  },
  {
    question: "Will I be obligated to hire you after the consultation?",
    answer:
      "Absolutely not. Our free consultation is designed to help you make informed decisions about your legal needs without any pressure or obligation.",
  },
  {
    question: "Can I bring someone with me to the consultation?",
    answer:
      "Yes, you're welcome to bring a spouse, family member, or business partner. We understand that legal matters often involve multiple stakeholders.",
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <Text
          tag="h1"
          variant="textLG"
          class="order-last font-serif uppercase lg:order-none col-span-full lg:col-span-2 text-base-900 mb-6"
        >
          Free Legal Consultation
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="text-base-700 max-w-3xl mx-auto leading-relaxed mb-8"
        >
          Take the first step towards resolving your legal concerns with
          confidence. Our experienced attorneys offer complimentary
          consultations to help you understand your options and make informed
          decisions about your legal matters.
        </Text>

        <div
          class="bg-accent-50 border border-accent-200 rounded-lg p-6 max-w-2xl mx-auto mb-8"
        >
          <Text tag="p" variant="textSm" class="text-accent-800 font-medium">
            ✓ No upfront costs or fees<br />
            ✓ Experienced attorney consultation<br />
            ✓ Clear assessment of your situation<br />
            ✓ Personalized legal guidance
          </Text>
        </div>
      </div>

      <!-- Benefits Section -->
      <div class="mb-16">
        <Text
          tag="h2"
          variant="textBase"
          class="font-semibold text-base-900 text-center mb-12"
        >
          Why Choose Our Free Consultation?
        </Text>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            consultationBenefits.map((benefit) => (
              <div class="text-center p-6 border border-base-200 rounded-lg hover:shadow-md transition-shadow">
                <div class="text-2xl font-bold text-accent-600 mb-4 bg-accent-50 w-12 h-12 rounded-full flex items-center justify-center mx-auto">
                  {benefit.icon}
                </div>
                <Text
                  tag="h3"
                  variant="textSm"
                  class="font-semibold text-base-900 mb-3"
                >
                  {benefit.title}
                </Text>
                <Text
                  tag="p"
                  variant="textXs"
                  class="text-base-700 leading-relaxed"
                >
                  {benefit.description}
                </Text>
              </div>
            ))
          }
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
        <!-- Consultation Form -->
        <div>
          <Text
            tag="h2"
            variant="textBase"
            class="font-semibold text-base-900 mb-6"
          >
            Schedule Your Consultation
          </Text>

          <form class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label
                  for="firstName"
                  class="block text-sm font-medium text-base-700 mb-2"
                >
                  First Name *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
                />
              </div>
              <div>
                <label
                  for="lastName"
                  class="block text-sm font-medium text-base-700 mb-2"
                >
                  Last Name *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
                />
              </div>
            </div>

            <div>
              <label
                for="email"
                class="block text-sm font-medium text-base-700 mb-2"
              >
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
              />
            </div>

            <div>
              <label
                for="phone"
                class="block text-sm font-medium text-base-700 mb-2"
              >
                Phone Number *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
              />
            </div>

            <div>
              <label
                for="practiceArea"
                class="block text-sm font-medium text-base-700 mb-2"
              >
                Practice Area *
              </label>
              <select
                id="practiceArea"
                name="practiceArea"
                required
                class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
              >
                <option value="">Select a practice area</option>
                <option value="corporate">Corporate Law</option>
                <option value="criminal">Criminal Defense</option>
                <option value="family">Family Law</option>
                <option value="personal-injury">Personal Injury</option>
                <option value="real-estate">Real Estate</option>
                <option value="employment">Employment Law</option>
                <option value="intellectual-property"
                  >Intellectual Property</option
                >
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label
                for="preferredDate"
                class="block text-sm font-medium text-base-700 mb-2"
              >
                Preferred Date
              </label>
              <input
                type="date"
                id="preferredDate"
                name="preferredDate"
                class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
              />
            </div>

            <div>
              <label
                for="preferredTime"
                class="block text-sm font-medium text-base-700 mb-2"
              >
                Preferred Time
              </label>
              <select
                id="preferredTime"
                name="preferredTime"
                class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
              >
                <option value="">Select preferred time</option>
                <option value="morning">Morning (9 AM - 12 PM)</option>
                <option value="afternoon">Afternoon (12 PM - 5 PM)</option>
                <option value="evening">Evening (5 PM - 7 PM)</option>
              </select>
            </div>

            <div>
              <label
                for="consultationType"
                class="block text-sm font-medium text-base-700 mb-2"
              >
                Consultation Type
              </label>
              <select
                id="consultationType"
                name="consultationType"
                class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
              >
                <option value="in-person">In-Person (New York Office)</option>
                <option value="phone">Phone Consultation</option>
                <option value="video">Video Conference</option>
              </select>
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-medium text-base-700 mb-2"
              >
                Brief Description of Your Legal Matter
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                placeholder="Please provide a brief overview of your legal situation..."
                class="w-full px-3 py-2 border border-base-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500"
              ></textarea>
            </div>

            <div class="flex items-start space-x-3">
              <input
                type="checkbox"
                id="privacy"
                name="privacy"
                required
                class="mt-1 h-4 w-4 text-accent-600 focus:ring-accent-500 border-base-300 rounded"
              />
              <label for="privacy" class="text-sm text-base-700">
                I agree to Carrington Law's privacy policy and consent to being
                contacted regarding my consultation request.
              </label>
            </div>

            <Button variant="accent" size="base" type="submit" class="w-full">
              Schedule Free Consultation
            </Button>
          </form>
        </div>

        <!-- What to Expect & FAQ -->
        <div>
          <!-- What to Expect -->
          <div class="mb-12">
            <Text
              tag="h2"
              variant="textBase"
              class="font-semibold text-base-900 mb-6"
            >
              What to Expect
            </Text>

            <div class="space-y-4">
              {
                whatToExpect.map((item, index) => (
                  <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0 w-8 h-8 bg-accent-100 text-accent-800 rounded-full flex items-center justify-center font-semibold text-sm">
                      {index + 1}
                    </div>
                    <div>
                      <Text
                        tag="h3"
                        variant="textSm"
                        class="font-semibold text-base-900 mb-1"
                      >
                        {item.step}
                      </Text>
                      <Text tag="p" variant="textXs" class="text-base-700">
                        {item.description}
                      </Text>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- FAQ Section -->
          <div>
            <Text
              tag="h2"
              variant="textBase"
              class="font-semibold text-base-900 mb-6"
            >
              Frequently Asked Questions
            </Text>

            <div class="space-y-4">
              {
                consultationFaqs.map((faq) => (
                  <details class="border border-base-200 rounded-lg p-4">
                    <summary class="font-medium text-base-900 cursor-pointer hover:text-accent-600">
                      {faq.question}
                    </summary>
                    <div class="mt-3 text-base-700 text-sm leading-relaxed">
                      <Text tag="p">{faq.answer}</Text>
                    </div>
                  </details>
                ))
              }
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="bg-base-900 text-white rounded-lg p-8 text-center">
        <Text tag="h2" variant="textBase" class="font-semibold mb-4">
          Need Immediate Assistance?
        </Text>
        <Text tag="p" variant="textSm" class="mb-6 opacity-90">
          For urgent legal matters or questions about scheduling, contact our
          team directly. We're here to help.
        </Text>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <div>
            <Text tag="p" variant="textSm" class="font-semibold mb-2">
              Call Us
            </Text>
            <a
              href="tel:+15551234567"
              class="text-accent-400 hover:text-accent-300 underline"
            >
              (555) 123-4567
            </a>
          </div>
          <div>
            <Text tag="p" variant="textSm" class="font-semibold mb-2">
              Email Us
            </Text>
            <a
              href="mailto:consultation@carringtonlaw.com"
              class="text-accent-400 hover:text-accent-300 underline"
            >
              consultation@carringtonlaw.com
            </a>
          </div>
          <div>
            <Text tag="p" variant="textSm" class="font-semibold mb-2">
              Office Hours
            </Text>
            <Text tag="p" variant="textXs" class="opacity-80">
              Mon-Fri: 8AM-6PM<br />
              Sat: 9AM-2PM
            </Text>
          </div>
        </div>

        <Button isLink={true} href="/contact" variant="accent" size="base">
          Contact Us Directly
        </Button>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
