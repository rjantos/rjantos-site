---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import AsyncLeadForm from "@/components/global/AsyncLeadForm.astro";
---

<BaseLayout
  title="Contact — Rudi Jantos"
  description="Book a quick call or email me to fix unreliable tracking, unclear attribution, and conflicting numbers."
  funnelStage="conversion"
  hideFloatingCta={true}
>
  <!-- CONTACT HERO -->
  <section class="bg-base-50">
    <Wrapper variant="standard" class="py-20 lg:py-28">
      <div class="max-w-2xl space-y-6">
        <Text
          tag="h1"
          variant="displayMD"
          class="text-accent-800 font-display"
        >
          Contact
        </Text>

        <p class="text-lg text-base-800">
          If you’re dealing with unreliable tracking, unclear attribution,
          or conflicting numbers, the fastest next step is a short conversation.
        </p>

        <p class="text-base-700">
          No sales pitch. No obligation.
          Just clarity on whether I can help and what to do next.
        </p>
      </div>
    </Wrapper>
  </section>

  <!-- CONTACT OPTIONS -->
  <Wrapper variant="standard" class="py-20 lg:py-28">
    <div class="max-w-xl space-y-10">
      <div class="bg-white border border-base-100 p-8 rounded-sm max-w-xl">

      <!-- PRIMARY CTA -->
      <div class="space-y-4">
        <Text tag="h2" variant="displayXS" class="font-display">
          Book a quick call
        </Text>

        <p class="text-base-700">
          A short call to understand your setup, your constraints,
          and whether it makes sense to work together.
        </p>

        <Button
          isLink={true}
          href="https://cal.com/rudi-jantos"
          data-track="book-call"
          variant="default"
          size="md"
        >
          Book a quick call
        </Button>

        <p class="text-xs text-base-500">
          Typically 20–30 minutes. No prep required.
        </p>
      </div>
      </div>

      <div class="bg-white border border-base-100 p-8 rounded-sm max-w-xl">  
      <!-- SECONDARY CTA -->
      <div class="space-y-4 border-base-100 pt-8">
        <Text tag="h2" variant="displayXS" class="font-display">
          Prefer email?
        </Text>

        <p class="text-base-700">
          If you’d rather write first, feel free to email me directly.
        </p>

        <Button
          isLink={true}
          href="mailto:hi@rjantos.com"
          data-track="email"
          variant="muted"
          size="md"
        >
          Email me
        </Button>

        <p class="text-xs text-base-500">
          I usually reply within one business day.
        </p>
      </div>
      </div>
      <!-- OPTIONAL MESSAGE -->
      <div class="space-y-4 pt-8 border-t border-base-200">
        <Text tag="h3" variant="textLG" class="font-display">
          What should I include?
        </Text>

        <ul class="text-base-700 space-y-2 list-disc pl-5">
          <li>What’s currently not working</li>
          <li>What tools you’re using (ads, analytics, CRM)</li>
          <li>What decision you’re struggling to make</li>
        </ul>
      </div>

      <div id="async-brief">
        <AsyncLeadForm
          heading="Prefer to send details asynchronously?"
          body="If now is not ideal for a call, send your context and I will reply with next steps."
          formName="contact_async_request"
          source="contact-page"
          submitLabel="Send async request"
        />
      </div>

      <div class="border border-base-200 rounded-sm p-6 space-y-3">
        <Text tag="h3" variant="textLG" class="font-display">
          Free tracking scorecard
        </Text>
        <Text variant="textBase" class="text-base-700">
          Use the template to spot attribution and tracking gaps quickly.
        </Text>
        <Button
          isLink
          href="/tracking-audit-scorecard/"
          data-track="lead-magnet"
          variant="muted"
          size="md"
        >
          Open scorecard template
        </Button>
      </div>

    </div>
  </Wrapper>
</BaseLayout>
