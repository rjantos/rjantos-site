---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Cta from "@/components/global/Cta.astro";
---

<BaseLayout
  title="B2B Marketing Audit — Fix GA4, Attribution & Revenue Leaks"
  description="A focused B2B marketing audit to diagnose broken tracking, misleading attribution, and revenue leaks across ads, analytics, and CRM."
>

  <!-- HERO / DECISION -->
  <section class="bg-base-50 border-b border-base-200">
    <Wrapper variant="standard" class="py-24 lg:py-32">
      <div class="max-w-xl space-y-6">
        <Text tag="h1" variant="displayMD" class="font-display text-accent-800">
          B2B Marketing Audit
        </Text>

        <Text variant="textLG" class="text-base-800">
          If your ads, analytics, and CRM don’t agree, you are making decisions on unreliable data.
        </Text>

        <Text variant="textLG" class="text-base-800">
          This audit gives you a clear diagnosis of what’s broken, what matters, and what to fix first.
        </Text>

        <div class="flex flex-col sm:flex-row gap-3 pt-4">
          <Button
            isLink
            href="https://cal.com/rudi-jantos"
            variant="default"
            size="md"
          >
            Book a quick call
          </Button>

          <Button
            isLink
            href="mailto:hi@rjantos.com"
            variant="muted"
            size="md"
          >
            Email me
          </Button>
        </div>

        <Text variant="textSM" class="text-base-600">
          Quick fit check. No pitch. If it’s already solid, I’ll tell you.
        </Text>
      </div>
    </Wrapper>
  </section>

  <!-- WHO IT IS FOR -->
  <Wrapper variant="standard" class="py-20 lg:py-24">
    <div class="max-w-3xl space-y-6">
      <Text tag="h2" variant="displayXS" class="font-display">
        This is for you if
      </Text>

      <ul class="space-y-3 text-base-700 list-disc pl-5">
        <li>You rely on GA4, paid media, and CRM data to make growth decisions</li>
        <li>Attribution feels inconsistent or misleading</li>
        <li>Performance changes without a clear explanation</li>
        <li>You need clarity before scaling spend or changing strategy</li>
      </ul>
    </div>
  </Wrapper>

  <!-- WHAT YOU GET -->
  <section class="bg-base-50 border-t border-b border-base-200">
    <Wrapper variant="standard" class="py-20 lg:py-24">
      <div class="max-w-3xl space-y-6">
        <Text tag="h2" variant="displayXS" class="font-display">
          What you get
        </Text>

        <ul class="space-y-3 text-base-700 list-disc pl-5">
          <li>A clear diagnosis of tracking and attribution issues</li>
          <li>A prioritized list of fixes (what matters vs what doesn’t)</li>
          <li>Recommendations you can act on immediately</li>
          <li>A short call to walk through findings and next steps</li>
        </ul>
      </div>
    </Wrapper>
  </section>

  <!-- NOT A FIT -->
  <Wrapper variant="standard" class="py-20 lg:py-24">
    <div class="max-w-3xl border border-base-200 bg-base-50 p-8 rounded-sm space-y-4">
      <Text tag="h2" variant="displayXS" class="font-display">
        Not a fit
      </Text>

      <ul class="space-y-2 text-base-700 list-disc pl-5">
        <li>You want vanity dashboards or generic reports</li>
        <li>You want more tools instead of clearer signals</li>
        <li>You are not willing to act on the findings</li>
      </ul>
    </div>
  </Wrapper>

  <!-- FINAL CTA -->
  <Cta />

</BaseLayout>
