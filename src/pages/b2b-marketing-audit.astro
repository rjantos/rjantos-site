---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Cta from "@/components/global/Cta.astro";
import TopicClusterNav from "@/components/global/TopicClusterNav.astro";

const auditFaqStructuredData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "Is this only for large B2B companies?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "No. It is designed for founders, operators, and growth teams that need reliable data before scaling spend.",
      },
    },
    {
      "@type": "Question",
      name: "Do you implement fixes or just audit?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "The default offer is an audit plus prioritized plan. Implementation support can be scoped as a follow-up.",
      },
    },
    {
      "@type": "Question",
      name: "How quickly can we get direction?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Usually quickly after kickoff. The purpose is to reduce decision risk early, not create a long analysis cycle.",
      },
    },
  ],
};
---

<BaseLayout
  title="B2B Marketing Audit (2026) — Fix GA4, GTM, and Attribution Leaks"
  description="Practical B2B marketing audit checklist to fix GA4, GTM, attribution, and CRM tracking issues. Prioritized fixes to improve decision quality fast."
  funnelStage="decision"
  structuredData={auditFaqStructuredData}
>

  <!-- HERO / DECISION -->
  <section class="bg-base-50 border-b border-base-200">
    <Wrapper variant="standard" class="py-24 lg:py-32">
      <div class="max-w-xl space-y-6">
        <Text tag="h1" variant="displayMD" class="font-display text-accent-800">
          B2B Marketing Audit
        </Text>

        <Text variant="textLG" class="text-base-800">
          If your ads, analytics, and CRM don’t agree, you are making decisions on unreliable data.
        </Text>

        <Text variant="textLG" class="text-base-800">
          This audit gives you a clear diagnosis of what’s broken, what matters, and what to fix first.
        </Text>

        <div class="flex flex-col sm:flex-row gap-3 pt-4">
          <Button
            isLink
            href="https://cal.com/rudi-jantos"
            data-track="book-call"
            variant="default"
            size="md"
          >
            Book a quick call
          </Button>

          <Button
            isLink
            href="mailto:hi@rjantos.com"
            data-track="email"
            variant="muted"
            size="md"
          >
            Email me
          </Button>
        </div>

        <Text variant="textSM" class="text-base-600">
          Quick fit check. No pitch. If it’s already solid, I’ll tell you.
        </Text>
      </div>
    </Wrapper>
  </section>

  <!-- WHO IT IS FOR -->
  <Wrapper variant="standard" class="py-20 lg:py-24">
    <div class="max-w-3xl space-y-6">
      <Text tag="h2" variant="displayXS" class="font-display">
        This is for you if
      </Text>

      <ul class="space-y-3 text-base-700 list-disc pl-5">
        <li>You rely on GA4, paid media, and CRM data to make growth decisions</li>
        <li>Attribution feels inconsistent or misleading</li>
        <li>Performance changes without a clear explanation</li>
        <li>You need clarity before scaling spend or changing strategy</li>
      </ul>
    </div>
  </Wrapper>

  <!-- WHAT YOU GET -->
  <section class="bg-base-50 border-t border-b border-base-200">
    <Wrapper variant="standard" class="py-20 lg:py-24">
      <div class="max-w-3xl space-y-6">
        <Text tag="h2" variant="displayXS" class="font-display">
          What you get
        </Text>

        <ul class="space-y-3 text-base-700 list-disc pl-5">
          <li>A clear diagnosis of tracking and attribution issues</li>
          <li>A prioritized list of fixes (what matters vs what doesn’t)</li>
          <li>Recommendations you can act on immediately</li>
          <li>A short call to walk through findings and next steps</li>
        </ul>
      </div>
    </Wrapper>
  </section>

  <!-- NOT A FIT -->
  <Wrapper variant="standard" class="py-20 lg:py-24">
    <div class="max-w-3xl border border-base-200 bg-base-50 p-8 rounded-sm space-y-4">
      <Text tag="h2" variant="displayXS" class="font-display">
        Not a fit
      </Text>

      <ul class="space-y-2 text-base-700 list-disc pl-5">
        <li>You want vanity dashboards or generic reports</li>
        <li>You want more tools instead of clearer signals</li>
        <li>You are not willing to act on the findings</li>
      </ul>
    </div>
  </Wrapper>

  <Wrapper variant="standard" class="pb-20 lg:pb-24">
    <div class="max-w-3xl space-y-4">
      <Text tag="h2" variant="displayXS" class="font-display">
        FAQ
      </Text>
      <details class="border border-base-200 rounded-sm p-5 bg-base-50">
        <summary class="cursor-pointer font-medium text-base-800">
          Is this only for large B2B companies?
        </summary>
        <p class="text-sm text-base-700 pt-3">
          No. It is designed for founders, operators, and growth teams that need
          reliable data before scaling spend.
        </p>
      </details>
      <details class="border border-base-200 rounded-sm p-5 bg-base-50">
        <summary class="cursor-pointer font-medium text-base-800">
          Do you implement fixes or just audit?
        </summary>
        <p class="text-sm text-base-700 pt-3">
          The default offer is an audit + prioritized plan. Implementation support
          can be scoped as a follow-up.
        </p>
      </details>
      <details class="border border-base-200 rounded-sm p-5 bg-base-50">
        <summary class="cursor-pointer font-medium text-base-800">
          How quickly can we get direction?
        </summary>
        <p class="text-sm text-base-700 pt-3">
          Usually quickly after kickoff. The purpose is to reduce decision risk
          early, not create a long analysis cycle.
        </p>
      </details>
    </div>
  </Wrapper>

  <!-- FINAL CTA -->
  <Cta />
  <TopicClusterNav current="/b2b-marketing-audit/" />

</BaseLayout>
