---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import PracticeCard from "@/components/practices/PracticeCard.astro";
// Content
import { getCollection } from "astro:content";
const allPractices = await getCollection("practice");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard">
      <Text
        tag="h1"
        variant="textLG"
        class="order-last font-serif uppercase lg:order-none col-span-full lg:col-span-2 text-base-900"
      >
        Practice Areas
      </Text>
      <div
        class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-y-24 gap-8"
      >
        {allPractices.map((practice) => <PracticeCard post={practice} />)}
      </div>
    </Wrapper>
  </section>
</BaseLayout>
