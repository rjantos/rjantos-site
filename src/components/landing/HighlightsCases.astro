---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import CasesCard from "@/components/cases/CasesCard.astro";
// Content
import { getCollection } from "astro:content";

const allCases = await getCollection("cases");

// Select first 3 cases to highlight
const highlightedCases = allCases.slice(0, 3);
---

<section class="bg-white">
  <Wrapper variant="standard" class="py-20">
    <div class="text-center mb-16">
      <Text tag="h2" variant="displayLG" class="text-base-900 mb-6 font-serif">
        Case Studies
      </Text>
      <Text
        tag="p"
        variant="textLG"
        class="text-base-700 max-w-3xl mx-auto leading-relaxed"
      >
        Explore our successful case outcomes and see how we've helped clients
        achieve their legal objectives across various practice areas and
        industries.
      </Text>
    </div>

    <!-- Case Studies Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {highlightedCases.map((caseStudy) => <CasesCard post={caseStudy} />)}
    </div>

    <!-- View All Cases Link -->
    <div class="text-center">
      <Button variant="muted" size="lg" isLink={true} href="/cases">
        View All Case Studies
      </Button>
    </div>
  </Wrapper>
</section>
