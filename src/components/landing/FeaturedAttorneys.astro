---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import TeamCard from "@/components/team/TeamCard.astro";
// Content
import { getCollection } from "astro:content";

const allTeamMembers = await getCollection("team");

// Select first 4 attorneys to feature
const featuredAttorneys = allTeamMembers.slice(0, 4);
---

<section class="bg-base-50">
  <Wrapper variant="standard" class="py-20">
    <div class="text-center mb-16">
      <Text tag="h2" variant="displayLG" class="text-base-900 mb-6 font-serif">
        Our Team
      </Text>
      <Text
        tag="p"
        variant="textLG"
        class="text-base-700 max-w-3xl mx-auto leading-relaxed"
      >
        Meet our experienced attorneys who are dedicated to providing
        exceptional legal representation and building lasting relationships with
        our clients.
      </Text>
    </div>

    <!-- Featured Attorneys Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      {featuredAttorneys.map((attorney) => <TeamCard post={attorney} />)}
    </div>

    <!-- Meet All Attorneys Link -->
    <div class="text-center">
      <Button variant="muted" size="lg" isLink={true} href="/team">
        Meet All Attorneys
      </Button>
    </div>
  </Wrapper>
</section>
