---
// Foundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Button from "@/components/fundations/elements/Button.astro";
---

<section class="bg-base-50 border-b border-base-200">
  <Wrapper variant="standard" class="py-20 lg:py-28">
    <div class="max-w-5xl space-y-10">
      <Text
        tag="h1"
        variant="displayXL"
        class="text-accent-900 font-display text-balance"
      >
        Fix revenue leaks between ads, analytics, and CRM.
      </Text>

      <Text
        tag="p"
        variant="textMD"
        class="mt-6 text-base-700 max-w-2xl leading-relaxed"
      >
        I help B2B teams get clean tracking, reliable attribution, and decisions they
        can defend.
      </Text>
       <Text
        tag="p"
        variant="textMD"
        class="mt-6 text-base-700 max-w-2xl leading-relaxed"
      >
        Start with a focused B2B Marketing Audit to identify where tracking,
        attribution, and CRM data break down.
      </Text>

      <div class="mt-10 flex flex-col sm:flex-row gap-4 items-start">
        <Button
          isLink={true}
          href="/offer/"
          data-track="offer"
          variant="default"
          size="md"
        >
          See the offer
        </Button>

        <Button
          isLink={true}
          href="/resources/"
          variant="muted"
          size="md"
        >
          Explore resources
        </Button>
      </div>

      <div class="pt-2">
        <Button
          isLink={true}
          href="https://cal.com/rudi-jantos"
          data-track="book-call"
          variant="none"
          size="xs"
          class="!text-accent-800 !bg-transparent !hover:bg-transparent !underline underline-offset-4 px-0 py-0 h-auto font-medium"
        >
          Or book a quick call
        </Button>
      </div>
    </div>
  </Wrapper>
</section>
