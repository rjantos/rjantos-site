---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";

import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Action from "@/components/fundations/icons/Action.astro";
import Integrity from "@/components/fundations/icons/Integrity.astro";
import Partnership from "@/components/fundations/icons/Partnership.astro";
const philosophyCards = [
  {
    icon: Integrity,
    title: "Signal over noise",
    description:
      "I cut through vanity metrics and conflicting dashboards so your team can focus on the few signals that drive real growth decisions.",
  },
  {
    icon: Action,
    title: "Practical execution",
    description:
      "The work is implementation-focused: audit, fix, and standardize tracking so outcomes are visible and repeatable.",
  },
  {
    icon: Partnership,
    title: "Systems that last",
    description:
      "You leave with a maintainable measurement system: clean GA4, reliable GTM, and CRM data that stays usable as the business scales.",
  },
];
---

<section class="bg-base-50">
  <Wrapper variant="standard" class="py-20 lg:py-28">
    <div class="grid grid-cols-1 lg:grid-cols-4 items-start gap-y-8">
      <Text
        tag="p"
        variant="textXS"
        class="text-secondary-500 tracking-wide uppercase"
      >
        Values
      </Text>
      <div class="lg:col-span-3">
        <Text
          tag="h2"
          variant="displayLG"
          class="text-accent-800 font-display text-balance"
        >
          How I work
        </Text>
        <Text tag="p" variant="textLG" class="text-base-600 mt-4">
          I focus on clarity over complexity.

          Clean tracking, reliable data, and decisions you can defend.
          My goal is to remove noise, not add tools.

        </Text>
      </div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3 mt-12 lg:mt-24 gap-8">
      {
        philosophyCards.map((card) => (
          <div class="bg-white border border-base-100 rounded-sm p-8 flex flex-col border-t-2 border-accent-200 pt-6">
            {card.icon && <card.icon class="size-8 text-secondary-400 " />}
            <Text
              tag="h3"
              variant="displaySM"
              class="text-accent-800 font-display mt-12"
            >
              {card.title}
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class="text-base-600 font-medium mt-2"
            >
              {card.description}
            </Text>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
