---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
// Content
const { title, location, type, remote, postedDate, salary, url } = {
  url: "/careers/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  location: Astro.props.post.data.location,
  type: Astro.props.post.data.type,
  remote: Astro.props.post.data.remote,
  postedDate: Astro.props.post.data.postedDate,
  salary: Astro.props.post.data.salary,
};
---

<article
  class="relative flex flex-col group border border-base-200 rounded-lg p-6 hover:shadow-lg transition-shadow"
>
  <a
    href={url}
    title={`View job details: ${title}`}
    aria-label={`View job details for ${title}`}
    class="absolute inset-0 z-10"></a>
  <div class="mb-4">
    <Text tag="h3" variant="textBase" class="font-medium text-base-900 mb-2">
      {title}
    </Text>
    <div class="flex flex-wrap items-center gap-2 text-sm text-base-600 mb-2">
      <span>{location}</span>
      {type && <span>â€¢ {type}</span>}

      <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs">
        {remote}
      </span>
    </div>
    <div class="flex items-center justify-between text-sm text-base-500">
      <span
        >Posted <time
          datetime={new Date(postedDate).toLocaleDateString("en-US", {
            month: "short",
            day: "numeric",
          })}
        >
          {
            new Date(postedDate).toLocaleDateString("en-US", {
              month: "short",
              day: "numeric",
            })
          }
        </time></span
      >
      <span class="font-medium text-base-700">{salary} </span>
    </div>
  </div>
</article>
