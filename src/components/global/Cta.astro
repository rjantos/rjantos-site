---
// Foundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<section class="bg-accent-900 text-white">
  <Wrapper variant="standard" class="py-20 lg:py-28">
    <div class="max-w-3xl">
      <Text
        tag="h2"
        variant="displaySM"
        class="text-accent-900 font-display text-white"
      >
        Start with clarity, not another tool.
      </Text>

      <Text
        tag="p"
        variant="textMD"
        class="text-white/80 leading-relaxed mt-4"
      >
        If your ads, analytics, and CRM don’t agree, you’re flying blind.
        I help you fix tracking and attribution fast, without adding unnecessary complexity.
      </Text>

      <div class="flex flex-col sm:flex-row gap-3 mt-8">
        <Button
          isLink={true}
          href="https://cal.com/rudi-jantos"
          data-track="book-call"
          variant="default"
          size="md"
        >
          Book a quick call
        </Button>

        <Button
          isLink={true}
          href="mailto:hi@rjantos.com"
          data-track="email"
          variant="muted"
          size="md"
        >
          Email me
        </Button>
      </div>

      <Text
        tag="p"
        variant="textXS"
        class="text-base-500 mt-4"
      >
        No obligation · Practical advice · Clear next steps
      </Text>
    </div>
  </Wrapper>
  <div class="h-px bg-white/10"></div>
</section>
