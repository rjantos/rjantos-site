---
import Button from "@/components/fundations/elements/Button.astro";
---

<div class="fixed bottom-4 right-4 z-40 hidden sm:block">
  <div class="bg-white border border-base-200 shadow-lg p-2 rounded-sm flex items-center gap-2">
    <Button
      isLink
      href="https://cal.com/rudi-jantos"
      data-track="book-call"
      data-track-label="floating-book-call"
      variant="default"
      size="xs"
    >
      Book call
    </Button>
    <Button
      isLink
      href="/contact/#async-brief"
      data-track="async-brief"
      data-track-label="floating-async-brief"
      variant="muted"
      size="xs"
    >
      Async brief
    </Button>
  </div>
</div>

<div class="fixed inset-x-0 bottom-0 z-40 sm:hidden border-t border-base-200 bg-white/95 backdrop-blur">
  <div class="mx-auto max-w-3xl px-4 py-3 flex items-center gap-2">
    <Button
      isLink
      href="https://cal.com/rudi-jantos"
      data-track="book-call"
      data-track-label="mobile-sticky-book-call"
      variant="default"
      size="xs"
      class="flex-1"
    >
      Book a quick call
    </Button>
    <Button
      isLink
      href="/contact/#async-brief"
      data-track="async-brief"
      data-track-label="mobile-sticky-async-brief"
      variant="muted"
      size="xs"
      class="flex-1"
    >
      Async brief
    </Button>
  </div>
</div>
