---
// Assets
import Logo from "@/components/assets/LogoTemp.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const currentYear = new Date().getFullYear();

const quickLinks = [
  { text: "About", href: "/about" },
  { text: "Contact", href: "/contact" },
];

const socialLinks = [
  {
    name: "LinkedIn",
    href: "https://www.linkedin.com/in/rudolfjantos/",
  },
  {
    name: "Twitter/X",
    href: "https://x.com/RJantos",
  },
];
---

<footer class="bg-base-50 border-t border-base-100">
  <Wrapper variant="standard" class="py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      {/* Brand / Positioning */}
      <div class="space-y-4">
        <Logo class="text-accent-800 h-4" />
        <Text tag="p" variant="textXS" class="text-base-600 leading-relaxed">
          Rudi Jantos is a strategic marketing partner helping B2B teams fix
          analytics, attribution, and decision-making across ads, analytics,
          and CRM.
        </Text>
      </div>

      {/* Links */}
      <div>
        <Text tag="h3" variant="textXS" class="text-secondary-500">
          Pages
        </Text>
        <ul class="flex flex-col gap-2 mt-4">
          {quickLinks.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-base-600 hover:text-accent-800 transition-colors text-xs"
              >
                {item.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Contact */}
      <div class="space-y-4">
        <Text tag="h3" variant="textXS" class="text-secondary-500">
          Contact
        </Text>

        <a
          href="mailto:hi@rjantos.com"
          class="text-base-600 hover:text-accent-800 transition-colors text-xs block"
        >
          hi@rjantos.com
        </a>

        <div class="flex flex-col gap-2 pt-2">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-base-600 hover:text-accent-800 transition-colors text-xs"
            >
              {social.name}
            </a>
          ))}
        </div>
      </div>
    </div>

    <div class="border-t border-base-100 pt-6 flex flex-col md:flex-row justify-between gap-4">
      <Text tag="p" variant="textXS" class="text-base-600">
        Â© {currentYear} Rudi Jantos. All rights reserved.
      </Text>

      <Text tag="p" variant="textXS" class="text-base-500">
        Built for clarity, not scale.
      </Text>
    </div>
  </Wrapper>
</footer>
