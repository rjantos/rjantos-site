---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Content
import { getCollection } from "astro:content";

const currentYear = new Date().getFullYear();

// Dynamically load practice areas
const practiceAreasData = await getCollection("practice");
const practiceAreas = practiceAreasData
  .sort((a, b) => a.data.title.localeCompare(b.data.title))
  .slice(0, 6) // Limit to 6 for footer
  .map((practice) => ({
    text: practice.data.title,
    href: `/practice-areas/${practice.slug}`,
  }));

// Dynamically load team members for "About Us" count
const teamData = await getCollection("team");
const teamCount = teamData.length;

// Dynamically load cases and careers counts
const casesData = await getCollection("cases");
const casesCount = casesData.length;

const careersData = await getCollection("careers");
const careersCount = careersData.length;

// Dynamically load press releases
const pressReleasesData = await getCollection("pressReleases");
const pressReleasesCount = pressReleasesData.length;

const quickLinks = [
  { text: `About Us (${teamCount} Attorneys)`, href: "/team" },
  {
    text: `Practice Areas (${practiceAreasData.length})`,
    href: "/practice-areas",
  },
  { text: `Cases (${casesCount})`, href: "/cases" },
  { text: `Careers (${careersCount} Openings)`, href: "/careers" },
  { text: `Press & Media (${pressReleasesCount})`, href: "/press-and-media" },
  { text: "Contact", href: "/contact" },
  { text: "Free Consultation", href: "/free-consultation" },
];

const officeLocations = [
  {
    name: "New York Office",
    address: "123 Legal Avenue, Suite 400",
    city: "New York, NY 10001",
    phone: "(555) 123-4567",
  },
  {
    name: "Los Angeles Office",
    address: "456 Justice Boulevard, Floor 12",
    city: "Los Angeles, CA 90210",
    phone: "(555) 987-6543",
  },
];

const socialLinks = [
  { name: "LinkedIn", href: "#", icon: "linkedin" },
  { name: "Twitter", href: "#", icon: "twitter" },
  { name: "Facebook", href: "#", icon: "facebook" },
];
---

<footer class="bg-base-900 text-white">
  <Wrapper variant="standard" class="py-16">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <Logo class="mb-4 text-white" />
        <Text
          tag="p"
          variant="textSm"
          class="text-base-300 mb-4 leading-relaxed"
        >
          Carrington Law provides comprehensive legal services with a commitment
          to excellence, integrity, and client success. Serving businesses and
          individuals nationwide.
        </Text>
        <div class="flex space-x-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                class="text-base-400 hover:text-white transition-colors"
                aria-label={social.name}
              >
                <span class="sr-only">{social.name}</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  {social.icon === "linkedin" && (
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  )}
                  {social.icon === "twitter" && (
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                  )}
                  {social.icon === "facebook" && (
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                  )}
                </svg>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <Text tag="h3" variant="textSm" class="font-semibold text-white mb-4">
          Quick Links
        </Text>
        <ul class="space-y-2">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-base-300 hover:text-white transition-colors text-sm"
                >
                  {link.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Practice Areas -->
      <div>
        <Text tag="h3" variant="textSm" class="font-semibold text-white mb-4">
          Practice Areas
        </Text>
        <ul class="space-y-2">
          {
            practiceAreas.map((area) => (
              <li>
                <a
                  href={area.href}
                  class="text-base-300 hover:text-white transition-colors text-sm"
                >
                  {area.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <Text tag="h3" variant="textSm" class="font-semibold text-white mb-4">
          Contact Us
        </Text>
        <div class="space-y-3">
          {
            officeLocations.map((office) => (
              <div class="text-base-300">
                <Text
                  tag="p"
                  variant="textSm"
                  class="font-medium text-white mb-1"
                >
                  {office.name}
                </Text>
                <Text tag="p" variant="textXs" class="mb-1">
                  {office.address}
                </Text>
                <Text tag="p" variant="textXs" class="mb-1">
                  {office.city}
                </Text>
                <a
                  href={`tel:${office.phone}`}
                  class="text-accent-400 hover:text-accent-300 text-sm transition-colors"
                >
                  {office.phone}
                </a>
              </div>
            ))
          }
        </div>
        <div class="mt-4">
          <a
            href="mailto:info@carringtonlaw.com"
            class="text-accent-400 hover:text-accent-300 text-sm transition-colors"
          >
            info@carringtonlaw.com
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-base-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-base-400 text-sm">
          <Text tag="p" variant="textXs">
            © {currentYear} Carrington Law. All rights reserved.
          </Text>
        </div>
        <div class="flex flex-col md:flex-row gap-4 text-base-400 text-xs">
          <a
            href="/infopages/privacy"
            class="hover:text-white transition-colors"
          >
            Privacy Policy
          </a>
          <a href="/infopages/terms" class="hover:text-white transition-colors">
            Terms of Service
          </a>
          <span class="hidden md:inline">•</span>
          <Text tag="p" variant="textXs"> Attorney Advertising </Text>
        </div>
      </div>

      <!-- Legal Disclaimer -->
      <div class="mt-6 pt-6 border-t border-base-800">
        <Text tag="p" variant="textXs" class="text-base-500 leading-relaxed">
          The information provided on this website is for general informational
          purposes only and does not constitute legal advice. Please consult
          with a qualified attorney for advice specific to your situation. Past
          results do not guarantee future outcomes.
        </Text>
      </div>
    </div>
  </Wrapper>
</footer>
