---
// Fundations
import "@/styles/global.css";
import BaseHead from "@/components/fundations/head/BaseHead.astro";
// Components
import Footer from "@/components/global/Footer.astro";

import Navigation from "@/components/global/Navigation.astro";
// Hides the big logo, navigation, or footer on selected screens by passing props:
// <BaseLayout hideFooter={true}>
// Control transparent nav per page with:
// <BaseLayout navTransparent={true}>
const {
  hideNavigation = false,
  hideFooter = false,
  navTransparent,
  title,
  description,
} = Astro.props as {
  hideNavigation?: boolean;
  hideFooter?: boolean;
  navTransparent?: boolean;
  title?: string;
  description?: string;
};
---

<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} />

    <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "@id": "https://rjantos.com/#rudi-jantos",
    "name": "Rudi Jantos",
    "url": "https://rjantos.com",
    "jobTitle": "Strategic Marketing Partner",
    "description": "Strategic marketing partner helping B2B teams fix revenue leaks between ads, analytics, and CRM.",
    "image": "https://rjantos.com/rj_profile.jpeg",
    "sameAs": [
      "https://www.linkedin.com/in/rudi-jantos/"
    ],
    "knowsAbout": [
      "Marketing Strategy",
      "Analytics",
      "Attribution",
      "Growth Marketing",
      "B2B Go-To-Market"
    ]
  }
  </script>
  </head>
  <body class="flex flex-col bg-white lg:min-h-svh">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-[60] focus:rounded-sm focus:bg-white focus:px-3 focus:py-2 focus:text-sm focus:text-base-900 focus:shadow"
    >
      Skip to content
    </a>
    {
      !hideNavigation &&
        (navTransparent !== undefined ? (
          <Navigation transparent={navTransparent} />
        ) : (
          <Navigation />
        ))
    }
    <main id="main-content" class="grow"><slot /></main>
    {!hideFooter && <Footer />}

  </body>
</html>
